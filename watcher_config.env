# Robust NFS Watcher Configuration
# This file contains recommended settings for different NFS scenarios

# Default settings (good starting point)
DEFAULT_DEBOUNCE=60
DEFAULT_POLL_INTERVAL=5
DEFAULT_SCAN_INTERVAL=300

# For very busy NFS shares (lots of changes)
BUSY_NFS_DEBOUNCE=120
BUSY_NFS_POLL_INTERVAL=10
BUSY_NFS_SCAN_INTERVAL=600

# For slow/high-latency NFS (over WAN)
SLOW_NFS_DEBOUNCE=180
SLOW_NFS_POLL_INTERVAL=15
SLOW_NFS_SCAN_INTERVAL=900

# For local fast NFS
FAST_NFS_DEBOUNCE=30
FAST_NFS_POLL_INTERVAL=2
FAST_NFS_SCAN_INTERVAL=150

# Allowed file extensions (add/remove as needed)
ALLOWED_EXTENSIONS=".md,.markdown,.pdf,.docx,.pptx,.html,.htm,.txt,.csv,.png,.jpg,.jpeg,.tiff,.tif"

# Database cleanup settings
# Files not seen for this many days will be removed from tracking
CLEANUP_DAYS=30